generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Character {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String?
  color       String
  imageUrl    String?

  @@unique([id])
  @@index([name, id])
  @@map("characters")
}

model Chapter {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  title      String
  content    String
  book       String   @default("AOAB")
  part       Int      @default(5)
  prepub     Boolean  @default(true)
  characters Json?

  @@unique([id])
  @@index([createdAt])
  @@map("chapters")
}
